{
  "name": "zotero-styles-repo",
  "license": "AGPL",
  "version": "0.2.0",
  "description": "",
  "private": true,
  "repository": "",
  "browserslist": "firefox >= 60, chrome >=67, edge >= 15, safari >= 10, last 2 versions, not dead",
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production run-p 'build:js -s' 'build:scss -s' && npm run build:postprocess",
    "build:js": "mkdir -p build/static && NODE_ENV=production rollup -c",
    "build:scss": "for f in scss/*.scss; do sass --no-source-map $f build/css/`basename $f .scss`.css; done;",
    "clean": "rimraf build lang",
    "devel:js": "rollup -c -w",
    "devel:scss": "for f in scss/*.scss; do sass --embed-source-map --watch $f build/css/`basename $f .scss`.css; done;",
    "build:postprocess": "postcss build/css/style.css --use autoprefixer --use cssnano --use postcss-prune-var --no-map -r",
    "start": "mkdir -p build && run-p 'devel:js -s' 'devel:scss -s'"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.5",
    "core-js": "^3.37.1",
    "lodash": "^4.17.21",
    "preact": "^10.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.6",
    "@babel/eslint-parser": "^7.24.6",
    "@babel/plugin-syntax-jsx": "^7.24.6",
    "@babel/plugin-transform-react-jsx": "^7.24.6",
    "@babel/plugin-transform-runtime": "^7.24.6",
    "@babel/preset-env": "^7.24.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.19",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "cssnano": "^7.0.1",
    "eslint": "<9.0.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-prune-var": "^1.1.2",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-sizes": "^1.0.6",
    "rollup-plugin-web-worker-loader": "^1.6.1",
    "sass": "^1.77.3",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-scss": "^6.3.0"
  }
}
